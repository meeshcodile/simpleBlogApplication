<div class="container-fluid " style="margin-top: 20px; ">
  <div class="col-sm-3 sidenav navbar-fixed-left " style=" height: 550px; font-size: 16px; ">
    <ul class="nav nav-pills nav-stacked ">
      <li><a href="/admin ">Manage Post</a></li>
      <li><a href="/admin/users ">Manage Users</a></li>
      <li><a href="/admin/topics ">Manage topics</a></li>
    </ul>
  </div>
  <div class="col-sm-9 admin-content ">
    <div class=" botton-group ">
      <a href="/admin/posts" class="btn btn-primary btn-lg "><i class="fa fa-"></i>Add Posts</a>
      <a href="/admin " class="btn btn-primary btn-lg ">Manage Posts</a>
    </div>

    <div class=" content ">
      <h2 class=" page-title ">Create Posts</h2>

      <form action="/admin/posts/{{user._id}}" method="post" enctype="multipart/form-data">
        <div class="form-group ">
          <label for=" ">Title</label>
          <input type="text " name="title" class="form-control " id="text-input " placeholder="Post Title "
            data-rule="minlen:4 " data-msg="Please enter at least 4 chars ">
        </div>
        <div class="form-group ">
          <label for=" ">Body</label>
          <textarea name="body" id="body " class="form-control " data-rule="required "
            data-msg="Please write something for us " placeholder="Message "></textarea>
        </div>

        <div class="form-group ">
          <label for=" ">Upload File</label>
          <input type="file" name="fileupload"  id="fileupload" class="form-control">
        </div>

        <div class="form-group ">
          <label for="topic ">Topic</label>
          <select name="topics" class="form-control ">
            <option value="News ">News</option>
            <option value="Poetry ">Poetry</option>
            <option value="Life Style ">Life Style</option>
            <option value=" ">Poetry</option>
            <option value="Education ">Education</option>
          </select>
          
        </div>

        <div class="text-center "><button type="submit" class="btn btn-primary btn-lg ">Add Post</button></div>

      </form>
    </div>

  </div>
</div>

