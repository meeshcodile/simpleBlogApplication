<div class="container-fluid " style="margin-top: 20px; ">
  <div class="col-sm-3 left-sidebar left " style="height: auto; font-size: 16px; ">
    <ul class="nav nav-pills nav-stacked ">
      <li><a href="/admin ">Manage Post</a></li>
      <li><a href="/admin/users ">Manage Users</a></li>
      <li><a href="/admin/topics ">Manage topics</a></li>
    </ul>
  </div>
  <div class="col-sm-9 admin-content ">
    <div class="botton-group ">
      <a href="/admin/posts/" class="btn btn-primary btn-lg ">Add Posts</a>
      <a href="/admin " class="btn btn-primary btn-lg ">Manage Posts</a>
    </div>

    <div class="content">
      <h2 class="page-title ">Manage Posts</h2>
      <table class="table table-stripped ">
        <thead>
          
          <th>Title</th>
          <th>Topics</th>
          <th>Blog Content</th>
          <th colspan="2">Action</th>
        </thead>
        <tbody>
          {{#each blog}}
          <tr>
            <td>{{title}}</td>
            <td>{{topics}}</td>
            <td>{{body}}</td>
           
            {{!-- <td><a href="# " class="btn btn-danger ">delete</a></td> --}}
           <td> <form action="/admin/deleteblogpost/{{id}}?newMethod=DELETE" method="post">
              <button class="btn btn-sm btn-danger" type="submit">Delete</button>
            </form>
            </td>
            <td><a href="#" class="btn btn-info ">Edit</a></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
</div>

